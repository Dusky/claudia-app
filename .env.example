# Claudia AI Terminal Companion - Environment Configuration
# Copy this file to .env and fill in your API keys

# =============================================================================
# LLM Provider API Keys
# =============================================================================

# Anthropic Claude API Key
# Get from: https://console.anthropic.com/
VITE_ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# Google AI API Key  
# Get from: https://aistudio.google.com/
VITE_GOOGLE_API_KEY=AIzaSy-your-key-here

# OpenAI API Key (if using OpenAI-compatible local providers)
# Get from: https://platform.openai.com/api-keys
VITE_OPENAI_API_KEY=sk-your-key-here

# =============================================================================
# Image Generation API Keys
# =============================================================================

# Replicate API Token
# Get from: https://replicate.com/account/api-tokens
VITE_REPLICATE_API_TOKEN=r8_your-token-here

# =============================================================================
# Local LLM Configuration
# =============================================================================

# Ollama Server URL (if using local LLM)
VITE_OLLAMA_BASE_URL=http://localhost:11434

# Local LLM Model Name
VITE_LOCAL_LLM_MODEL=llama2

# =============================================================================
# Application Configuration
# =============================================================================

# Default LLM Provider (anthropic, google, local)
VITE_DEFAULT_LLM_PROVIDER=anthropic

# Default Image Provider (replicate)
VITE_DEFAULT_IMAGE_PROVIDER=replicate

# Default Terminal Theme (mainframe70s, pc80s, bbs90s, modern)
VITE_DEFAULT_THEME=mainframe70s

# Database Configuration
VITE_DATABASE_PATH=./claudia.db

# Conversation History Length (number of past messages to send to LLM)
VITE_CONVERSATION_HISTORY_LENGTH=10

# =============================================================================
# Performance & Caching Settings
# =============================================================================

# Avatar Cache Settings
VITE_AVATAR_CACHE_SIZE=100
VITE_AVATAR_CACHE_TTL=604800

# Request Timeouts (milliseconds)
VITE_LLM_TIMEOUT=30000
VITE_IMAGE_TIMEOUT=120000

# =============================================================================
# Development Settings
# =============================================================================

# Enable debug logging
VITE_DEBUG_MODE=false

# Mock API responses (for development without API keys)
VITE_MOCK_APIS=false

# Enable detailed error reporting
VITE_DETAILED_ERRORS=false
